<%# app/views/products/show.html.erb %>
<div class="container mx-auto px-4 py-8">
  <div class="bg-white rounded-lg shadow-lg overflow-hidden md:flex">
    <%# Columna de la Imagen %>
    <div class="md:w-1/2">
      <%= image_tag @product.image_url, alt: @product.name, class: "w-full h-auto md:h-full object-cover" rescue image_tag "placeholder_product.png", class: "w-full h-auto md:h-full object-cover" %>
    </div>

    <%# Columna de Información y Personalización %>
    <div class="p-6 md:w-1/2 flex flex-col justify-between">
      <div>
        <h1 class="text-3xl font-bold mb-3"><%= @product.name %></h1>
        <p class="text-gray-700 mb-4"><%= @product.description %></p>
        <p class="text-2xl font-bold text-green-600 mb-6">$<%= number_to_currency(@product.price, unit: "", separator: ",", delimiter: ".") %></p>

        <%# Formulario para selección de frase y (futuro) añadir al carrito %>
        <%# Por ahora, este formulario no hará nada al enviarse, es solo para la estructura visual %>
        <%= form_with(url: "#", local: true, method: :post, data: { product_id: @product.id }) do |form| %>
          <div class="mb-4">
            <%= form.label :motivational_phrase_id, "Elige tu Frase Motivacional:", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= form.collection_select :motivational_phrase_id, @motivational_phrases, :id, :content,
                { prompt: "Selecciona una frase..." },
                { class: "mt-1 block w-full py-2 px-3 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", required: true } %>
            <%# collection_select(objeto, método_del_objeto, colección, value_method, text_method, opciones_prompt, opciones_html) %>
          </div>

          <div class="mt-6">
            <%# TODO: Este botón eventualmente añadirá al carrito %>
            <%= form.submit "Añadir al Carrito (Personalizado)", class: "w-full bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded cursor-pointer" %>
          </div>
        <% end %>
      </div>

      <div class="mt-6">
        <%= link_to "← Volver al Catálogo", products_path, class: "text-blue-500 hover:underline" %>
      </div>
    </div>
  </div>
</div>